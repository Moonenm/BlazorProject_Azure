@page "/foto"

<div class="container">
    <div class="row">
        <div class="col">
            <h1>Random foto</h1>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    Random foto
                </div>
                <div class="card-body text-center">
                    <img src="@currentImage" id="foto" height="300px" />
                    <br />
                    <button class="btn btn-primary mt-2" @onclick="ChangeRandomImage">Random foto</button>
                    <div id="logging">@((MarkupString)log)</div>
                </div>
            </div>
        </div>
    </div>
</div>

